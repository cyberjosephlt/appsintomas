<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_administrador"
    android:orientation="vertical"
    android:background="@drawable/bg_color"
    >

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color"
          >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabcursos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURSOS"
            android:icon="@drawable/cursos"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabdocentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOCENTES"
            android:icon="@drawable/docentes"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabestudiantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTUDIANTES"
            android:icon="@drawable/alumnos"
            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>
</LinearLayout>